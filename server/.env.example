# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# 🗃️ Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/futbolstats"
# For SQLite (development): DATABASE_URL="file:./dev.db"

# 🌐 Server Configuration
PORT=3002
NODE_ENV=development

# 🔐 JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# 🛡️ Security Configuration
BCRYPT_ROUNDS=10

# 📱 Mobile & CORS Configuration
CORS_ORIGIN="*"
# For production: CORS_ORIGIN="https://yourdomain.com,http://localhost:5173"

# 🔍 Development & Debugging
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
LOG_LEVEL=debug

# 📧 Email Configuration (future feature)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# 🚀 Performance & Rate Limiting
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000
